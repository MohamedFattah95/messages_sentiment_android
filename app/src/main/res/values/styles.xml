<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDarker</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

        <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/black_effective</item>
            <item name="colorPrimaryDark">@color/black_effective</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="colorControlNormal">@color/colorAccent</item>
            <item name="colorControlActivated">@color/colorAccent</item>
            <item name="colorControlHighlight">@color/colorAccent</item>
            <item name="android:textColorHint">@color/iron</item>
            <item name="colorButtonNormal">@color/colorPrimaryDarker</item>
            <item name="android:colorButtonNormal">@color/colorPrimaryDarker</item>
            <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    

</resources>
